{
  "name": "nico-zenza",
  "version": "0.0.0",
  "description": "niconico HTML5 Player",
  "main": "",
  "type": "module",
  "scripts": {
    "compile": "tsc -b tsconfig.build.json",
    "lint": "eslint --ext .ts,.js . && prettier -cu .",
    "lint:fix": "eslint --fix --ext .ts,.js . && prettier -wu .",
    "build:dev": "NODE_ENV=development npm run build --workspaces --if-present --",
    "build:prod": "NODE_ENV=production npm run build --workspaces --if-present --",
    "test": "NODE_ENV=test mocha test/**/*.ts",
    "test:watch": "NODE_ENV=test mocha --watch test/**/*.ts",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kPherox/ZenzaWatch.git"
  },
  "author": "kphrx",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/kPherox/ZenzaWatch/issues"
  },
  "homepage": "https://github.com/kPherox/ZenzaWatch#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/mocha": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.4",
    "mocha": "^9.1.3",
    "prettier": "^2.5.1",
    "rollup": "^2.70.1",
    "rollup-plugin-userscript-metablock": "^0.3.1",
    "ts-node": "^10.4.0",
    "typescript": "^4.2.4"
  },
  "workspaces": [
    "packages/zenza-watch",
    "packages/mylist-pocket",
    "packages/advanced-settings",
    "packages/hls-support",
    "packages/blog-parts-button",
    "packages/heat-sync",
    "packages/cap-tube",
    "packages/masked-watch",
    "packages/game-pad",
    "packages/uquery",
    "packages/mylist-filter"
  ]
}
