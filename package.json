{
  "name": "nico-zenza",
  "version": "0.0.0",
  "description": "niconico HTML5 Player",
  "type": "module",
  "scripts": {
    "compile": "tsc -b tsconfig.build.json",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.js . && prettier --ignore-path .gitignore -cu .",
    "lint:fix": "eslint --ignore-path .gitignore --fix --ext .ts,.js . && prettier --ignore-path .gitignore -wu .",
    "build:dev": "NODE_ENV=development npm run build",
    "build:prod": "NODE_ENV=production npm run build",
    "test": "NODE_ENV=test npm run test --workspaces --if-present --",
    "postinstall": "husky install",
    "prebuild": "npm run compile",
    "build": "node build.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kphrx/nico-zenza.git"
  },
  "author": "kphrx",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/kphrx/nico-zenza/issues"
  },
  "homepage": "https://github.com/kphrx/nico-zenza#readme",
  "devDependencies": {
    "@babel/eslint-parser": "^7.23.3",
    "@babel/plugin-syntax-import-assertions": "^7.23.3",
    "@babel/plugin-transform-runtime": "^7.23.7",
    "@babel/preset-env": "^7.23.8",
    "@babel/preset-typescript": "^7.23.3",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.11.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@violentmonkey/types": "^0.1.7",
    "colorette": "^2.0.20",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.2.4",
    "rollup": "^4.9.6",
    "rollup-plugin-userscript": "^0.3.0",
    "tslib": "^2.6.2",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/script/zenza-watch",
    "packages/script/mylist-pocket",
    "packages/script/advanced-settings",
    "packages/script/hls-support",
    "packages/script/blog-parts-button",
    "packages/script/heat-sync",
    "packages/script/cap-tube",
    "packages/script/masked-watch",
    "packages/script/game-pad",
    "packages/script/uquery",
    "packages/script/mylist-filter",
    "packages/build-util"
  ],
  "engines": {
    "node": ">=20.11"
  }
}
