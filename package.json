{
  "name": "nico-zenza",
  "version": "0.0.0",
  "description": "niconico HTML5 Player",
  "main": "",
  "type": "module",
  "scripts": {
    "compile": "tsc -b tsconfig.build.json",
    "lint": "eslint --ignore-path .gitignore --ext .ts,.js . && prettier --ignore-path .gitignore -cu .",
    "lint:fix": "eslint --ignore-path .gitignore --fix --ext .ts,.js . && prettier --ignore-path .gitignore -wu .",
    "build:dev": "NODE_ENV=development npm run build --workspaces --if-present --",
    "build:prod": "NODE_ENV=production npm run build --workspaces --if-present --",
    "test": "NODE_ENV=test npm run test --workspaces --if-present --",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kphrx/nico-zenza.git"
  },
  "author": "kphrx",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/kphrx/nico-zenza/issues"
  },
  "homepage": "https://github.com/kphrx/nico-zenza#readme",
  "devDependencies": {
    "@rollup/plugin-typescript": "^11.1.6",
    "@types/mocha": "^10.0.6",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "mocha": "^10.2.0",
    "prettier": "^3.1.1",
    "rollup": "^4.9.4",
    "rollup-plugin-userscript-metablock": "^0.3.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  },
  "workspaces": [
    "packages/zenza-watch",
    "packages/mylist-pocket",
    "packages/advanced-settings",
    "packages/hls-support",
    "packages/blog-parts-button",
    "packages/heat-sync",
    "packages/cap-tube",
    "packages/masked-watch",
    "packages/game-pad",
    "packages/uquery",
    "packages/mylist-filter"
  ]
}
